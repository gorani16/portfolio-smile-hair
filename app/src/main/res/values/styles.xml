<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Toolbar Style : 폰트 -->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="fontFamily">@font/font_jua</item>
    </style>

    <!-- ImageView Style -->
    <style name="Circle_10">
        <item name="cornerSize">10%</item>
    </style>

    <style name="Circle_20">
        <item name="cornerSize">20%</item>
    </style>

    <style name="Circle_50">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Text Style -->
    <style name="TextBlack">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBlack.Text14">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Text Bold Style -->

    <style name="TextBoldBlack">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBoldBlack.Text12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextBoldBlack.Text14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBoldBlack.Text16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBoldBlack.Text18">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBoldBlack.Text20">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextBoldBlack.Text22">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextBoldBlack.Text24">
        <item name="android:textSize">24sp</item>
    </style>

</resources>